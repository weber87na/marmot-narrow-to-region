{
  "name": "marmot-narrow-to-region",
  "displayName": "Marmot Narrow to Region",
  "description": "Narrow a selected region to a temporary file for focused editing with full IntelliSense.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Editor"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "marmot-narrow-to-region.narrow",
        "title": "Narrow to Region"
      },
      {
        "command": "marmot-narrow-to-region.widen",
        "title": "Widen Region (Exit)"
      }
    ],
    "keybindings": [
      {
        "command": "marmot-narrow-to-region.narrow",
        "key": "alt+n",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "marmot-narrow-to-region.widen",
        "key": "alt+v",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}